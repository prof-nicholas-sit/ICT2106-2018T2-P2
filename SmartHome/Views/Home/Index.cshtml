@model SmartHome.Models.Account

@{
    ViewData["Title"] = "Login";
}

<style>
    td {
        padding-top: 30px;
    }

    th {
        padding-top: 40px;
        color: #006dcc;
        text-transform: uppercase;
    }
</style>
<body style="background-color:lightgray">
    <div class="container" style="margin-top:40px; background-color:white; width:600px; height:250px; align-content:center">
        <form asp-action="Login">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-3">

                    <table style="width:100%">
                        <tr>
                            <th>
                                <label asp-for="Username" class="control-label"></label>
                            </th>
                        </tr>
                        <tr>
                            <th>
                                <label asp-for="Password" class="control-label"></label>
                            </th>
                        </tr>
                    </table>
                </div>
                <div class="col-sm-5">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <table style="width:100%">
                        <tr>
                            <td>
                                <input name="Username" asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input name="password" asp-for="Password" class="form-control" type="password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </td>
                        </tr>
                    </table>


                </div>
            </div>
            <div class="form-group" style="text-align:center; padding-top:20px;">
                <input type="submit" value="LOGIN" class="btn btn-primary" />
            </div>
        </form>

        <div style="text-align:center">
            <a asp-action="ForgotPassword">Forget Password</a>
            <br />
        </div>
    </div>


</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}