@model SmartHome.Models.Account

@{
    ViewData["Title"] = "ForgotPassword";
}

<style>
    td {
        padding-top: 30px;
    }

    th {
        padding-top: 40px;
        color: #006dcc;
        text-transform: uppercase;
    }
</style>
<body style="background-color:lightgray">
    <div class="container" style="margin-top:40px; background-color:white; width:600px; height:250px; align-content:center">
        <form asp-action="SendRequest">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-3">
                    <table style="width:100%">
                        <tr>
                            <th>
                                <label asp-for="Username" class="control-label"></label>
                            </th>
                        </tr>
                    </table>
                </div>
                <div class="col-sm-5">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <table style="width:100%">
                        <tr>
                            <td>
                                <input asp-for="Username" name="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </td>
                        </tr>
                    </table>


                </div>
            </div>
            <div class="form-group" style="text-align:center; padding-top:20px;">
                <input type="submit" value="SEND RESET REQUEST" class="btn btn-primary" />
            </div>
        </form>

    </div>


</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
