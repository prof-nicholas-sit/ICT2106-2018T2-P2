@model SmartHome.Models.Schedule

@{
    ViewData["Title"] = "Confirm";
}

@{
    var data = (Device)ViewData["Device"];
}

    <h2>Confirm</h2>

    <div>
        <h4>Schedule</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Device ID
            </dt>
            <dd>
                @ViewBag.deviceId
            </dd>
            <dt>
                Device name
            </dt>
            <dd>
                @ViewBag.deviceName
            </dd>
            <dt>
                Start Time
            </dt>
            <dd>
                @Html.DisplayFor(model => model.StartTime)
            </dd>
            <dt>
                End Time
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EndTime)
            </dd>
            <dt>
                Schedule every week
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ApplyToEveryWeek)
            </dd>
            <dt>
                Day
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DayOfWeek)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ScheduleId">Edit</a>
        <a asp-action="Index">Back to List</a>
    </div>
